<div id="agents_overlay" class="overlay" data-overlay="agents">
    <div class="flex overlay-content">
        <div class="overlay-messages-container overlay-container agents-container">
            <div class="overlay-messages-header">
                <h1>{{t 'Agents' }}</h1>
                <div class="exit">
                    <span class="exit-sign">&times;</span>
                </div>
            </div>

            <div class="alert" id="agents_overlay_error"></div>

            <div class="agents-actions">
                <form id="create-agent-form" class="agents-form">
                    <label for="create-agent-name">{{t 'Create agent' }}</label>
                    <input
                      id="create-agent-name"
                      class="input-element"
                      type="text"
                      autocomplete="off"
                      placeholder="{{t 'Name' }}"
                    />
                    <button type="submit" class="action-button action-button-solid-brand">{{t 'Create' }}</button>
                </form>

                <form id="attach-agent-form" class="agents-form">
                    <label for="attach-runtime-agent-id">{{t 'Attach runtime agent' }}</label>
                    <input
                      id="attach-runtime-agent-id"
                      class="input-element"
                      type="text"
                      autocomplete="off"
                      placeholder="{{t 'Runtime agent id' }}"
                    />
                    <input
                      id="attach-agent-name"
                      class="input-element"
                      type="text"
                      autocomplete="off"
                      placeholder="{{t 'Optional name' }}"
                    />
                    <button type="submit" class="action-button action-button-solid-brand">{{t 'Attach' }}</button>
                </form>
            </div>

            <div class="agents-list overlay-messages-list" id="agents-list">
                <div class="no-overlay-messages">
                    {{t 'Loadingâ€¦'}}
                </div>
            </div>

            <div class="location-memory-container" id="location-memory-container"></div>
        </div>
    </div>
</div>
