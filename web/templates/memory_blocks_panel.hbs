<div class="memory-blocks-panel" data-agent-id="{{agentId}}" data-agent-name="{{agentName}}">
    <div class="memory-blocks-header">
        <h3>{{t 'Memory blocks for' }} {{agentName}}</h3>
        <button type="button" class="action-button close-memory-blocks-button">{{t 'Close' }}</button>
    </div>

    <div class="alert memory-blocks-error"></div>

    <div class="memory-blocks-create-section">
        <h4>{{t 'Create new block' }}</h4>
        <form class="memory-block-create-form">
            <input type="text" class="input-element memory-block-label-input" placeholder="{{t 'Label' }}" />
            <input type="text" class="input-element memory-block-description-input" placeholder="{{t 'Description (optional)' }}" />
            <textarea class="input-element memory-block-value-input" placeholder="{{t 'Value' }}" rows="3"></textarea>
            <button type="submit" class="action-button action-button-solid-brand">{{t 'Create' }}</button>
        </form>
    </div>

    <div class="memory-blocks-list">
        <h4>{{t 'Existing blocks' }}</h4>
        <div class="memory-blocks-container">
            <div class="no-overlay-messages">{{t 'Loadingâ€¦'}}</div>
        </div>
    </div>
</div>
